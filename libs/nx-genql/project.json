{
  "name": "nx-genql",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/nx-genql/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/nx-genql",
        "main": "libs/nx-genql/src/index.ts",
        "tsConfig": "libs/nx-genql/tsconfig.lib.json",
        "assets": [
          "libs/nx-genql/*.md",
          {
            "input": "./libs/nx-genql/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./libs/nx-genql/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./libs/nx-genql",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./libs/nx-genql",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/nx-genql/**/*.ts",
          "libs/nx-genql/package.json",
          "libs/nx-genql/executors.json",
          "libs/nx-genql/generators.json"
        ]
      }
    },
    "genql": {
      "executor": "nx-genql:genql"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/nx-genql/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
