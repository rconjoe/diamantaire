{
  "name": "darkside-journal",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/darkside/journal",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/darkside/journal"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/darkside/journal"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "darkside-journal:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "darkside-journal:build:development",
          "dev": true,
          "port": 4205
        },
        "production": {
          "buildTarget": "darkside-journal:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "darkside-journal:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/darkside/journal/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/darkside/journal/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  },
  "tags": []
}
