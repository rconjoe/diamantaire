{
  "name": "serverless",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/serverless",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/serverless"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/serverless"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "serverless:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "serverless:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "serverless:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "serverless:build:production"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/serverless/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": []
}
