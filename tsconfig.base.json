{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@diamantaire/darkside/core": ["libs/darkside/core/src/index.ts"],
      "@diamantaire/darkside/data/react-query": [
        "libs/darkside/data/react-query/src/index.ts"
      ],
      "@diamantaire/darkside/page/home": [
        "libs/darkside/page/home/src/index.ts"
      ],
      "@diamantaire/darkside/page/test-page": [
        "libs/darkside/page/test-page/src/index.ts"
      ],
      "@diamantaire/darkside/template/global": [
        "libs/darkside/template/global/src/index.ts"
      ],
      "@diamantaire/darkside/template/standard": [
        "libs/darkside/template/standard/src/index.ts"
      ],
      "@diamantaire/gateway/core": ["libs/gateway/core/src/index.ts"],
      "@diamantaire/gateway/health": ["libs/gateway/health/src/index.ts"],
      "@diamantaire/shared/constants": ["libs/shared/constants/src/index.ts"],
      "@diamantaire/shared/types": ["libs/shared/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
