{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": true /* Report errors for fallthrough cases in switch statement. */,
    "noImplicitReturns": true /* Report error when not all code paths in function return a value. */,
    "noUnusedLocals": false /* Report errors on unused locals. */,
    "noUnusedParameters": true /* Report errors on unused parameters. */,
    "strictFunctionTypes": true /* Enable strict checking of function types. */,
    "noImplicitThis": false,
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@diamantaire/darkside/components/header": [
        "libs/darkside/components/header/src/index.ts"
      ],
      "@diamantaire/darkside/core": ["libs/darkside/core/src/index.ts"],
      "@diamantaire/darkside/data/api": ["libs/darkside/data/api/src/index.ts"],
      "@diamantaire/darkside/data/hooks": [
        "libs/darkside/data/hooks/src/index.ts"
      ],
      "@diamantaire/darkside/data/queries": [
        "libs/darkside/data/queries/src/index.ts"
      ],
      "@diamantaire/darkside/page/home": [
        "libs/darkside/page/home/src/index.ts"
      ],
      "@diamantaire/darkside/page/test-page": [
        "libs/darkside/page/test-page/src/index.ts"
      ],
      "@diamantaire/darkside/template/global": [
        "libs/darkside/template/global/src/index.ts"
      ],
      "@diamantaire/darkside/template/standard": [
        "libs/darkside/template/standard/src/index.ts"
      ],
      "@diamantaire/server/common/auth": [
        "libs/server/common/auth/src/index.ts"
      ],
      "@diamantaire/server/common/configs": [
        "libs/server/common/configs/src/index.ts"
      ],
      "@diamantaire/server/common/database": [
        "libs/server/common/database/src/index.ts"
      ],
      "@diamantaire/server/common/utils": [
        "libs/server/common/utils/src/index.ts"
      ],
      "@diamantaire/server/core": ["libs/server/core/src/index.ts"],
      "@diamantaire/server/price": ["libs/server/price/src/index.ts"],
      "@diamantaire/server/products": ["libs/server/products/src/index.ts"],
      "@diamantaire/shared/constants": ["libs/shared/constants/src/index.ts"],
      "@diamantaire/shared/types": ["libs/shared/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
